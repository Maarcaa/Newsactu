{% extends "base.html.twig" %}

{% block title %}Voir article
{% endblock %}

{% block body %}

	<h1 class="text-center my-4">Tableau de Bord</h1>

	<div class="row">
		<div class="col-10 mx-auto my-3">
			{% include "includes/_flashes.html.twig" %}
		</div>
	</div>

	<div class="row">
		<div class="col-10.mx-auto.mb-4">

			<div class="card">
				<div class="card-header">
					<h1 class=" text-center card-title mb-5">{{ article.title }}</h1>
					<h4 class="text-center text-secondary mb-3">{{ article.subtitle }}</h4>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-center text-muted">Crée le : {{ article.createdAt | date('d/m/Y') }} | Par : {{ article.author.firstname }} {{ article.author.lastname }}</li>
				</ul>
                {# asset va toujours aller regarder dans le dossier public là ou sont upagrade les photos #}
				<img src=" {{ asset('uploads/' ~ article.photo) }}" class="img-custom" alt="{{ article.title }}">
				<div class="card-body">
					<p class="card-text my-4 col-8 mx-auto"> {{ article.content | raw }}</p>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
